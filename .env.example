# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_URI=mongodb://localhost:27017/flamebox
DB_NAME=flamebox

# ==============================================
# JWT & AUTHENTICATION
# ==============================================
# Generate a strong secret key for production
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# ==============================================
# EMAIL CONFIGURATION (Nodemailer)
# ==============================================
# Gmail Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM_NAME=Flamebox Gym
EMAIL_FROM_ADDRESS=noreply@flameboxgym.com

# ==============================================
# OTP CONFIGURATION
# ==============================================
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# ==============================================
# FRONTEND & CORS
# ==============================================
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==============================================
# API CONFIGURATION
# ==============================================
API_BASE_URL=http://localhost:3000
API_VERSION=v1

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

# ==============================================
# UPLOAD & FILE SETTINGS
# ==============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOADS_DIR=uploads

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_LOGGING=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to true only in development
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_DEBUG_MODE=false